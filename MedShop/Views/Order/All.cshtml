@model ICollection<OrderServiceModel>

@{
    ViewData["Title"] = "Completed orders";
}

<h2 class="text-center text-capitalize text-primary" style="font-family: cursive">@ViewBag.Title</h2>
<hr />

@if (Model.Any())
{
    <div class="row">
        <div class="col-md-8 offset-2">
            <p>
                <h4>Your orders</h4>
            </p>

            <table class="table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Items</th>
                        <th>Total</th>
                        <th>Seller</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td class="align-middle">@order.Id</td>
                            <td class="align-middle">
                                <ul style="list-style-type:none">
                                    @foreach (var item in order.OrderItems)
                                    {
                                        <li>
                                            <div class="alert alert-info" role="alert">
                                                <span class="badge bg-success">@item.Amount</span> [@item.Price.ToString("c")] - @item.ProductName
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </td>
                            <td class="align-middle">
                                $@order.TotalPrice
                            </td>
                            <td class="align-middle"> @order.UserName </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <h3 class="text-center"> You have no orders yet!</h3>
}