@model IEnumerable<MedShop.Core.Models.Product.ProductServiceModel>

@{
    ViewBag.Title = "My Products";
}

<h2 class="text-center text-capitalize text-primary" style="font-family: cursive">@ViewBag.Title</h2>
<hr/>

@if (Model.Any())
{
        <div class="row">
        @foreach (var product in Model)
        {
                    <partial name="_ProductPartial" model="@product"/>
        }
        </div>
}
else
{
        <h3 class="text-center"> You have no products yet!</h3>
}