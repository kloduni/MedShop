@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ProductServiceModel

<div class="col-md-4">
    <div class="card mb-3">
        <img class="align-content-center card-img-top" src="@Model.ImageUrl" style="height: 300px;max-width: 400px" alt="Product Image">
        <div class="card-body text-center">
            <h4>@Model.ProductName</h4>
            <h6>
                Description:
                <b>@Model.Description</b>
            </h6>
            <h6>
                Category:
                <b>@Model.Category</b>
            </h6>
            <h6>
                Quantity:
                <b>@Model.Quantity</b>
            </h6>
            <h6>
                Seller:
                <b>@Model.Seller</b>
            </h6>
            <h6>
                Price:
                <b>@String.Format("{0:f2}", Model.Price) BGN</b>
            </h6>
            <br />
            <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id" asp-route-information="@Model.GetInformation()" class="btn btn-warning">Details</a>
            @if (this.User?.Identity?.IsAuthenticated ?? false)
            {
                <a asp-controller="ShoppingCart" asp-action="AddItemToShoppingCart" asp-route-id="@Model.Id" class="btn btn-success">Buy</a>
                <p></p>
            }
        </div>
    </div>
</div>